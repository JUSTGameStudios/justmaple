root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

[*.toml]
indent_style = space
indent_size = 2
tab_width = 2

[*.bat]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
