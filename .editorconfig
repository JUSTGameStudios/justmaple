root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size  = 2
tab_width    = 2

csharp_new_line_before_open_brace      = none     # same‑line braces
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks     = false

dotnet_sort_system_directives_first     = true
dotnet_separate_import_directive_groups = true

# var style
csharp_style_var_for_built_in_types    = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere             = false:suggestion

# Naming rules – public = PascalCase, private fields = camelCase
dotnet_naming_symbols.public_symbols.applicable_kinds   = class,struct,interface,enum,delegate,property,method,event,field
dotnet_naming_symbols.public_symbols.applicable_accessibilities = public,protected,protected_internal

dotnet_naming_symbols.private_fields.applicable_kinds    = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private,internal,protected_and_internal

dotnet_naming_style.pascal_case.capitalization = pascal_case
dotnet_naming_style.camel_case.capitalization  = camel_case

dotnet_naming_rule.public_symbols_must_be_pascal.symbols  = public_symbols
dotnet_naming_rule.public_symbols_must_be_pascal.style    = pascal_case
dotnet_naming_rule.public_symbols_must_be_pascal.severity = warning

dotnet_naming_rule.private_fields_camel.symbols  = private_fields
dotnet_naming_rule.private_fields_camel.style    = camel_case
dotnet_naming_rule.private_fields_camel.severity = suggestion

# Flag “needs formatting” (IDE0055) as a warning so CI can catch drift
dotnet_diagnostic.IDE0055.severity = warning
